@model List<ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Resim</th>
                <th>Adres</th>
                <th>Şehir</th>
                <th>Fiyat</th>
                <th>Sil</th>
                <th>Güncelle</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td><img src="@item.ImageUrl" style="height:100px; width:150px" /></td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Price</td>
                    <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-info">Güncelle</a></td>
                  
                </tr>
            }
        </tbody>
    </table>
    <a href="/Slider/AddSlider/" class="btn btn-primary">Yeni Slider Girişi</a>
</div>



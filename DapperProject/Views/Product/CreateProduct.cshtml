@model CreateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Ad</label>
        <input type="text" class="form-control" asp-for="ProductName" />
        <br />
        <label>Ürün Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Stok</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Kategori Ad</label>
        <input type="text" class="form-control" asp-for="CategoryId" />
        <br />
        <button class="btn btn-primary">Ürünü Ekle</button>
    </form>
</div>